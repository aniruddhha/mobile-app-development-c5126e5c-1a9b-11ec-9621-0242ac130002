<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.aniruddha.kudalkar.expensemanager.ExpenseListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_expense_list">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_expenseDetailsFragment"
            app:destination="@id/expenseDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.aniruddha.kudalkar.expensemanager.ExpenseFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_expense"/>
    <fragment
        android:id="@+id/expenseDetailsFragment"
        android:name="com.aniruddha.kudalkar.expensemanager.ExpenseDetailsFragment"
        android:label="fragment_expense_details"
        tools:layout="@layout/fragment_expense_details" />
</navigation>